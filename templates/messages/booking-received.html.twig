{% extends 'base.html.twig' %}
{% block title %}Bookings Received{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">
    <link rel="stylesheet" href="datatable-css.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.css"/>

    <script>$(document).ready(function () {
            $.noConflict();
            var table = $('#dfUsageTable').DataTable();
        });</script>
    <style>
        #dfUsageTable_paginate{
            width: 100%;
            text-align: center;
            font-size: 16px;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container">
{% if booking %}
    <table id="" class="table table-striped table-bordered" data-toggle="table" data-pagination="true" data-search="true">
        <thead><tr><th>Organisation Name</th><th>Email<br><small>Address</small></th><th>Contact Name<br><small>Contact Number</small></th><th>Reference Number</th><th>Action</th></tr></thead>
    <tbody>
    {% for bookings in booking %}
        <tr><td>{{ bookings.OrganisationName }}</td><td>{{ bookings.email }} <br><small> {{ bookings.address }} </small></td><td>{{ bookings.ContactName }}<br><small>{{ bookings.ContactNumber }}</small></td><td>{{ bookings.ref }}</td><td><a href="/show-booking/{{ bookings.id }}" class="btn btn-primary mt-3">Show</a></td></tr>
    {% endfor %}
    </tbody>
    </table>
    {% else %}
    <p>No Bookings have been received</p>
    {% endif %}
        <div id="presidents"></div>
    </div>
{% endblock %}
{% block script %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.js"></script>


    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script>
        $(function() {
            $('#presidents').initDataTables({{ datatable_settings(datatable) }});
        });
    </script>
    <script src="datatable.js"></script>
    <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>
{% endblock %}
