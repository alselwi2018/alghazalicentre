        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-4">
    {{ form_row(job.PositionAppliedFor) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(job.FirstName) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(job.LastName) }}
                </div>

            </div>
        </div>

        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    {{ form_row(job.address) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(job.mobile) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(job.email) }}
                </div>

            </div>
        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    {{ form_row(job.DateOfBirth) }}
